<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/announcement_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="TIF4502 Class Postponed"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/announcement_list_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/announcement_list_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:text="TIF4502 A"
            android:textColor="#888888"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/announcement_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/announcement_list_class"
            android:text="Just now"
            android:layout_alignParentRight="true"
            android:textColor="#888888"
            android:textSize="13sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>