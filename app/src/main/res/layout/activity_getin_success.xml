<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_mhs"
            android:layout_width="20dp"
            android:layout_height="33dp"
            app:srcCompat="@drawable/back"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="back_icon"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="19.5dp"
            android:layout_toRightOf="@id/back_mhs"
            android:text="Attendance"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        >

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Mobile Programming"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:textSize="24sp"/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="10.30 - 12.10"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Wednesday, Sept 27"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="C Building, Fasilkom-TI"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_marginTop="5dp"
                android:layout_height="200dp"
                android:src="@drawable/map"
                app:civ_border_color="@color/black"
                app:civ_border_width="1.5dp"
                />
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ci_location"
                android:fontFamily="@font/poppins_regular"
                android:text=" Near Fasilkom-TI"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/bx_current_location"
                android:fontFamily="@font/poppins_regular"
                android:text=" You are 0.05km away from the class"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="10.30"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:text="Attend Class"
                android:textAllCaps="false"
                android:background="@color/green"
                android:textColor="@color/white"
                />
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="canâ€™t get in to class today?"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/green"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>